<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp">
        <ImageView
            android:id="@+id/yd_bg_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/yd_bigcircle"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/yd_big_text"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dp"/>
        <ImageView
            android:id="@+id/yd_smallcircle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>
        <ImageView
            android:id="@+id/yd_arrow"
            android:layout_width="52dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/yd_bigcircle"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/arrow"/>
        <ImageView
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/yd_bigcircle"
            android:layout_marginTop="125dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/textd_to_y"/>
        <ImageView
            android:id="@+id/min_after_yd"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:src="@drawable/min_after"
            android:layout_marginTop="177dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/ytcheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="38.5dp"
            android:textColor="#ff0000"
            android:layout_marginTop="170dp"
            android:layout_alignParentRight="true"
            android:visibility="visible"
            android:layout_marginRight="95dp"/>
        <ImageView
            android:id="@+id/arrived_yd"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:visibility="gone"
            android:src="@drawable/arrived"/>
        <ImageView
            android:id="@+id/finished_yd"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="162dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            android:src="@drawable/finish"/>
        <ImageView
            android:id="@+id/continuetime_yd"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:visibility="gone"
            android:src="@drawable/continuetime"/>
        <ImageView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="219dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/busstop"/>
        <ImageView
            android:id="@+id/refresh_btn_yd"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/refresh_icon"/>
        <ImageView
            android:id="@+id/refresh_text_yd"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="19dp"
            android:layout_marginRight="45dp"
            android:src="@drawable/refresh_text"/>

    </RelativeLayout>
    <ImageView
        android:id="@+id/yd_middle"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>
    <ListView
        android:id="@+id/yd_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:background="#FFFFFF">
    </ListView>
</LinearLayout>